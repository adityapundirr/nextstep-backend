{
  "version": 2,
  "builds": [
    {
      "src": "api/generateMindmap.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/generateMindmap",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://nextstep-guide.netlify.app" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}